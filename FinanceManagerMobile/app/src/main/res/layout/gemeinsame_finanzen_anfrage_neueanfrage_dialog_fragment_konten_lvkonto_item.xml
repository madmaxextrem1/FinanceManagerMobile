<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/hauptmenu_buchungen_lv_item_circletextview"
        android:backgroundTint="@color/colorPrimary"
        android:foregroundTint="@color/white"
        android:scaleType="centerInside" />


    <TextView
        android:id="@+id/Titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/Bestand"
        android:layout_toEndOf="@id/Image"
        android:text="Kontotitel"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

    <TextView
        android:id="@+id/Konto_Art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Titel"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/Bestand"
        android:layout_toEndOf="@id/Image"
        android:text="Konto Art"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

    <TextView
        android:id="@+id/Bestand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="100,00 â‚¬"
        android:textAlignment="viewStart"
        android:textColor="@color/ListItem_HeaderTextColor"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>
