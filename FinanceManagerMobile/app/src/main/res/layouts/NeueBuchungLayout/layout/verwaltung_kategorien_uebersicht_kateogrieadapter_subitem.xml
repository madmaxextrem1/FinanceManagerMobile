<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:id="@+id/Buchung_Hinzufügen_Kategorie_Dialog_lv_subitem_Layout">

    <TextView
        android:id="@+id/Buchung_Hinzufügen_Kategorie_Dialog_lv_subitem_Circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/hauptmenu_buchungen_lv_item_circletextview"
        android:backgroundTint="#FFD3E9D8" />

    <TextView
        android:id="@+id/Buchung_Hinzufügen_Kategorie_Dialog_lv_subitem_Titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unterkategorien"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/Buchung_Hinzufügen_Kategorie_Dialog_lv_subitem_Circle"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:maxLines="2"
        style="@style/TextAppearance.MaterialComponents.Body2"/>

    <View
        style="@style/MaterialDivider"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/Buchung_Hinzufügen_Kategorie_Dialog_lv_subitem_Circle">

    </View>
</RelativeLayout>

