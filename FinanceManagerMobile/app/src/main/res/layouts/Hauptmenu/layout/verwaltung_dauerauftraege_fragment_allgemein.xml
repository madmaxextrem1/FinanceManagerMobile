<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true"
        android:visibility="visible">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtBeschreibung"
            android:hint="Beschreibung"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:startIconDrawable="@drawable/ic_edit_white_24dp"
            android:layout_marginEnd="16dp"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:boxBackgroundColor="@color/textfield_box_background"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="normal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.tiper.MaterialSpinner
            android:id="@+id/cboKonto"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            android:layout_height="56dp"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/textfield_box_background"
            android:hint="Konto"
            app:spinnerMode="dropdown"
            app:endIconMode="custom"
            app:endIconCheckable="true"
            app:endIconDrawable="@drawable/ic_arrow_drop_down"
            android:layout_below="@id/txtBeschreibung"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:startIconDrawable="@drawable/ic_account_balance_white_24dp"/>

        <com.tiper.MaterialSpinner
            android:id="@+id/cboKontoVon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            android:layout_height="56dp"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/textfield_box_background"
            android:hint="Konto von"
            app:spinnerMode="dropdown"
            app:endIconMode="custom"
            app:endIconCheckable="true"
            app:endIconDrawable="@drawable/ic_arrow_drop_down"
            android:layout_below="@id/cboKonto"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:startIconDrawable="@drawable/ic_account_balance_white_24dp"/>

        <com.tiper.MaterialSpinner
            android:id="@+id/cboKontoAuf"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            android:layout_height="56dp"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/textfield_box_background"
            android:hint="Konto auf"
            app:spinnerMode="dropdown"
            app:endIconMode="custom"
            app:endIconCheckable="true"
            app:endIconDrawable="@drawable/ic_arrow_drop_down"
            android:layout_below="@id/cboKontoVon"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:startIconDrawable="@drawable/ic_account_balance_white_24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtBetrag"
            android:layout_below="@id/cboKontoAuf"
            android:hint="Betrag"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:startIconDrawable="@drawable/ic_euro_symbol_white_24dp"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:boxBackgroundColor="@color/textfield_box_background"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.tiper.MaterialSpinner
            android:id="@+id/cboRhythmus"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxCollapsedPaddingTop="4dp"
            app:boxStrokeWidth="0.2dp"
            app:boxStrokeColor="@color/ButtonBackColor"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/textfield_box_background"
            android:hint="Rhythmus"
            app:spinnerMode="dropdown"
            app:endIconMode="custom"
            app:endIconCheckable="true"
            app:endIconDrawable="@drawable/ic_arrow_drop_down"
            android:layout_below="@id/txtBetrag"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:startIconDrawable="@drawable/ic_account_balance_white_24dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:switchMinWidth="36dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:useMaterialThemeColors="true"
            android:text="Aktiv"
            android:id="@+id/swtAktiv"
            android:layout_below="@id/cboRhythmus"/>
    </RelativeLayout>

</RelativeLayout>