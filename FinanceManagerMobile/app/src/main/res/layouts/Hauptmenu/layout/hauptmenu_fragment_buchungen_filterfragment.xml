<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_Filter_Bestätigen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_check_black_24dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_Filter_Zurücksetzen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/btn_Filter_Bestätigen"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_clear_black_24dp"
        tools:ignore="PrivateResource" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_alignParentTop="true"
        android:id="@+id/lblZeitraum"
        android:text="Zeitraum">
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtZeitraum"
        android:layout_below="@id/lblZeitraum"
        android:hint="Zeitraum auswählen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:startIconDrawable="@drawable/ic_date_range_black_24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="@color/textfield_box_background"
        app:boxBackgroundMode="filled"
        app:boxCollapsedPaddingTop="4dp"
        app:boxStrokeWidth="0.2dp"
        app:boxStrokeColor="@color/ButtonBackColor"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:theme="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
            android:singleLine="true"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/txtZeitraum"
        android:id="@+id/lblBuchungstitel"
        android:text="Buchungstitel">
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtBuchungstitel"
        android:layout_below="@id/lblBuchungstitel"
        android:hint="Buchungstitel durchsuchen"
        app:startIconDrawable="@drawable/ic_edit_white_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="@color/textfield_box_background"
        app:boxBackgroundMode="filled"
        app:boxCollapsedPaddingTop="4dp"
        app:boxStrokeWidth="0.2dp"
        app:boxStrokeColor="@color/ButtonBackColor"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="12dp"
            android:theme="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.ChipGroup"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBuchungstitel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:singleSelection="true"
        android:layout_marginEnd="16dp"
        android:id="@+id/ChipGroupFilterBuchungstitel">
        <com.google.android.material.chip.Chip
        android:id="@+id/Buchungstitelfilter_Chip_Gleich"
        android:layout_width="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:chipBackgroundColor="@color/ChipBackGroundChecked"
        android:textColor="@color/white"
        app:checkedIcon="@drawable/ic_check_white_24dp"
        android:text="Ist gleich"
        android:checked="true"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:checkedIconVisible="false"
        android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
        <com.google.android.material.chip.Chip
        android:id="@+id/Buchungstitelfilter_Chip_Beginnt"
        android:layout_width="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:chipBackgroundColor="@color/ChipBackGroundUnchecked"
        android:textColor="@color/white"
        app:checkedIcon="@drawable/ic_check_white_24dp"
        app:checkedIconVisible="false"
        android:text="Beginnt mit"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
        <com.google.android.material.chip.Chip
        android:id="@+id/Buchungstitelfilter_Chip_Enthält"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:checkedIconVisible="false"
        app:checkedIcon="@drawable/ic_check_white_24dp"
        app:chipBackgroundColor="@color/ChipBackGroundUnchecked"
        android:layout_width="wrap_content"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:text="Enthält"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
        </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/ChipGroupFilterBuchungstitel"
        android:id="@+id/lblBetrag"
        android:text="Betrag">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtBetrag"
        android:layout_below="@id/lblBetrag"
        android:hint="Betrag durchsuchen"
        app:startIconDrawable="@drawable/ic_euro_symbol_white_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="@color/textfield_box_background"
        app:boxBackgroundMode="filled"
        app:boxCollapsedPaddingTop="4dp"
        app:boxStrokeWidth="0.2dp"
        app:boxStrokeColor="@color/ButtonBackColor"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="12dp"
            android:theme="@style/Widget.MaterialComponents.TextInputEditText.FilledBox"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.ChipGroup"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBetrag"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:singleSelection="true"
        android:layout_marginEnd="16dp"
        android:id="@+id/ChipGroupFilterBetrag">
        <com.google.android.material.chip.Chip
            android:id="@+id/Betragfilter_Chip_Gleich"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipBackgroundColor="@color/ChipBackGroundChecked"
            android:textColor="@color/white"
            app:checkedIcon="@drawable/ic_check_white_24dp"
            android:text="Gleich"
            android:checked="true"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:checkedIconVisible="false"
            android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
        <com.google.android.material.chip.Chip
            android:id="@+id/Betragfilter_Chip_Kleiner"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:chipBackgroundColor="@color/ChipBackGroundUnchecked"
            android:textColor="@color/white"
            app:checkedIcon="@drawable/ic_check_white_24dp"
            app:checkedIconVisible="false"
            android:text="Kleiner"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
        <com.google.android.material.chip.Chip
            android:id="@+id/Betragfilter_Chip_Größer"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:checkedIconVisible="false"
            app:checkedIcon="@drawable/ic_check_white_24dp"
            app:chipBackgroundColor="@color/ChipBackGroundUnchecked"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Größer"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_height="wrap_content">
        </com.google.android.material.chip.Chip>
    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/ChipGroupFilterBetrag"
        android:id="@+id/lblMerkmale"
        android:text="Merkmale">
    </TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="62dp"
            android:id="@+id/Layout_txtMerkmale"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="8dp"
            android:paddingStart="48dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:fadeScrollbars="true"
            android:scrollbarDefaultDelayBeforeFade="0"
            android:nestedScrollingEnabled="true"
            android:background="@color/textfield_box_background"
            android:layout_below="@id/lblMerkmale">
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    app:lineSpacing="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ChipGroupMerkmale"
                    app:singleSelection="false"
                    app:chipSpacingVertical="0dp"
                    android:scrollbars="horizontal"
                    app:chipSpacingHorizontal="4dp"
                    app:singleLine="false"
                    android:nestedScrollingEnabled="true"
                    style="@style/Widget.MaterialComponents.ChipGroup">
                </com.google.android.material.chip.ChipGroup>
        </FrameLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/lblMerkmale"
        android:layout_marginTop="24dp"
        android:id="@+id/ico_Merkmal"
        android:layout_marginStart="28dp"
        android:src="@drawable/ic_merkmal_white_24dp">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Merkmal auswählen"
        android:gravity="top"
        android:visibility="visible"
        android:layout_toEndOf="@id/ico_Merkmal"
        android:textSize="12sp"
        android:textColor="#555555"
        android:layout_below="@id/lblMerkmale">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/Layout_txtMerkmale"
        android:id="@+id/lblKooperation"
        android:text="Kooperation">
    </TextView>

    <com.tiper.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="@color/textfield_box_background"
        android:layout_below="@id/lblKooperation"
        android:id="@+id/cboKooperation"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_arrow_drop_down"
        app:boxBackgroundMode="filled"
        app:startIconDrawable="@drawable/ic_group_white_24dp"
        app:boxCollapsedPaddingTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Kooperation auswählen"
        app:spinnerMode="dropdown"
        app:boxStrokeWidth="0.2dp"
        app:boxStrokeColor="@color/ButtonBackColor"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">
    </com.tiper.MaterialSpinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/cboKooperation"
        android:id="@+id/lblKonto"
        android:text="Konto">
    </TextView>

<com.tiper.MaterialSpinner
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
    app:boxBackgroundColor="@color/textfield_box_background"
    android:layout_below="@id/lblKonto"
    android:id="@+id/cboKonto"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/ic_arrow_drop_down"
    app:boxBackgroundMode="filled"
    app:startIconDrawable="@drawable/ic_account_balance_white_24dp"
    app:boxCollapsedPaddingTop="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:hint="Konto auswählen"
    app:spinnerMode="dropdown"
    app:boxStrokeWidth="0.2dp"
    app:boxStrokeColor="@color/ButtonBackColor"
    app:hintAnimationEnabled="true"
    app:hintEnabled="true">
</com.tiper.MaterialSpinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="bottom|start"
        android:textAlignment="gravity"
        android:textColor="@color/ListItem_SubTextColor"
        android:layout_below="@id/cboKonto"
        android:id="@+id/lblKategorie"
        android:text="Kategorie">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:boxBackgroundColor="@color/textfield_box_background"
        android:id="@+id/cboKategorie"
        android:hint="Kategorie auswählen"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundMode="filled"
        app:boxCollapsedPaddingTop="4dp"
        android:layout_below="@id/lblKategorie"
        app:endIconMode="clear_text"
        app:boxStrokeWidth="0.2dp"
        app:boxStrokeColor="@color/ButtonBackColor"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:startIconDrawable="@drawable/ic_list_white_24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            style="@style/TextAppearance.MaterialComponents.Body1" />

    </com.google.android.material.textfield.TextInputLayout>


</RelativeLayout>
    </ScrollView>