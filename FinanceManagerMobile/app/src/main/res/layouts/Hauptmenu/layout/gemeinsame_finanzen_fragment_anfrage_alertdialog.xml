<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:maxWidth="280dp"
        android:minWidth="280dp"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="bottom"
                android:text="Titel"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:id="@+id/Titel"
                android:textAlignment="viewStart"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/AlertDialog_Title_TextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/Titel"
                android:fontFamily="@font/roboto_regular"
                android:gravity="bottom"
                android:text="Message"
                android:textAlignment="viewStart"
                android:textColor="@color/AlertDialog_Message_TextColor"
                android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLöschen"
            app:cornerRadius="@dimen/ButtonCornerRadius"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_below="@id/Message"
            android:elevation="@dimen/TextButtonElevation"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Löschen"
            android:textAlignment="center"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbbrechen"
            app:cornerRadius="@dimen/ButtonCornerRadius"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:elevation="@dimen/TextButtonElevation"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_below="@id/Message"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@id/btnLöschen"
            android:text="Abbrechen"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:textSize="14sp" />
    </RelativeLayout>
