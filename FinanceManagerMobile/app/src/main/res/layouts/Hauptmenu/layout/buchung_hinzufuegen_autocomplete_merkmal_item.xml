<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgTyp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_user"
        android:background="@drawable/hauptmenu_buchungen_lv_item_circletextview"
        android:backgroundTint="@color/colorPrimary"
        android:foregroundTint="@color/fm_Login_Background_Color"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/lblTitel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/imgTyp"
        android:text="Titel"
        android:textAlignment="viewStart"
        android:textColor="@color/ListItem_HeaderTextColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblInhaber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTitel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/imgTyp"
        android:text="Inhaber"
        android:textAlignment="viewStart"
        android:textColor="@color/ListItem_SubTextColor"
        android:textSize="14sp" />

</RelativeLayout>